{
  "name": "jirabridge",
  "private": true,
  "version": "1.0.0",
  "description": "Professional screenshot management desktop application",
  "author": "MananAlchemy",
  "main": "electron/main.js",
  "homepage": "./",
  "protocols": [
    {
      "name": "jira-bridge",
      "schemes": [
        "jira-bridge"
      ]
    }
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:prod": "npm run build:prod && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:dist:prod": "npm run build:prod && electron-builder --publish=never",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac:prod": "npm run build:prod && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:win:prod": "npm run build:prod && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "build:linux:prod": "npm run build:prod && electron-builder --linux",
    "build:all": "npm run build && electron-builder --mac --win --linux",
    "build:all:prod": "npm run build:prod && electron-builder --mac --win --linux",
    "release": "npm run build && electron-builder --publish=always",
    "release:prod": "npm run build:prod && electron-builder --publish=always",
    "release:build": "node release.js",
    "test:env": "node scripts/test-env.js",
    "test:machine-id": "node scripts/test-machine-id.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.884.0",
    "@aws-sdk/s3-request-presigner": "^3.884.0",
    "firebase": "^12.2.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.344.0",
    "machine-id": "^1.0.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.mananalchemy.jirabridge",
    "productName": "JiraBridge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "MananAlchemy",
      "repo": "JiraBridge"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} ${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Productivity"
    }
  }
}
